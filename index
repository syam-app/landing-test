    <script>
      function sendToWhatsApp(event) {
        event.preventDefault();
        const form = document.getElementById('form');
        let msg = `*Data Pemilih TPS 003*%0a`;
        msg += `%0a`;
        msg += `*Nama:* ${form.nama.value}%0a`;
        msg += `*Kelamin:* ${form.gender.value}%0a`;
        msg += `*RT/RW:* ${form.opsi.value}%0a`;
        msg += `*No DPT:* ${form.Nodpt.value}%0a`;
        msg += `*Keterangan 1:* ${form.ops2.value}%0a`;
        msg += `*Keterangan 2:* ${form.tersaring.value}%0a`;
        msg += `*Tanggal Coklit:* ${form.tanggal.value}`;
        const waUrl = `https://wa.me/6285156850068?text=${msg}`;
        window.open(waUrl, '_blank');
      }
    </script>
